---
import { Image } from 'astro:assets';

interface Props {
  src: string;
  name: string;
  className: string;
}

const { src, name, className } = Astro.props;
//TODO: use config
const previewUrl = `https://kmgyjzhtpelimdsqmkbt.supabase.co/storage/v1/object/public/preview/${src}`;
const previewAlt = `Preview of ${name}`;
---

<Image
  src={previewUrl}
  alt={previewAlt}
  class={className}
  width={453}
  height={270}
/>
